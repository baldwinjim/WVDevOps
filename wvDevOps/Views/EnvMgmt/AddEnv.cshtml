@model wvDevOps.Models.Env

@{
    ViewBag.Title = "Add Environment";
}

<h2>Add Environment</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Env</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.vpc_cidr, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.vpc_cidr, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.vpc_cidr, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.aws_region, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("aws_region", new List<SelectListItem>
           {
               new SelectListItem { Text = "us-east-1", Value="us-east-1" },
               new SelectListItem { Text = "us-east-2", Value="us-east-2" },
               new SelectListItem { Text = "us-west-1", Value="us-west-1" },
               new SelectListItem { Text = "us-west-2", Value="us-west-2" }
           }, "Select AWS Region")
                @Html.ValidationMessageFor(model => model.aws_region, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("protected", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.CheckBoxFor(model => model.protectedEnv)
                @Html.ValidationMessageFor(model => model.protectedEnv, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
